#!/usr/bin/env bash
set -e
if [[ ! -d "/home/jarvis/workspace/playground/test-postgresql-service" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/jarvis/workspace/playground/test-postgresql-service")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/jarvis/workspace/playground/test-postgresql-service" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/jarvis/workspace/playground/test-postgresql-service/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/jarvis/workspace/playground/test-postgresql-service/.envrc" "/home/jarvis/workspace/playground/test-postgresql-service/.direnv"/*.rc
